{
  "name": "pass-55",
  "version": "0.1.0",
  "description": "A simple password manager for seniors",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm install --legacy-peer-deps && concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build": "react-scripts build",
    "build:electron": "electron-builder",
    "package": "npm run build && npm run build:electron",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "argon2": "^0.30.3",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sqlite3": "^5.1.6",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "concurrently": "^8.2.2",
    "electron": "^24.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.pass55.app",
    "productName": "Pass+55",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-setup-${version}.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": ["AppImage"],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
